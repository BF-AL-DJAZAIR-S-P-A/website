{% extends 'base.html.twig' %}

{% block title %}Appels index{% endblock %}

{% block body %}
    <h1>Appels index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Image</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appel in appels %}
            <tr>
                <td>{{ appel.id }}</td>
                <td>{{ appel.titre }}</td>
                <td>{{ appel.texte }}</td>
                <td>{{ appel.image }}</td>
                <td>{{ appel.date ? appel.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_appels_show', {'id': appel.id}) }}">show</a>
                    <a href="{{ path('app_appels_edit', {'id': appel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appels_new') }}">Create new</a>
{% endblock %}
